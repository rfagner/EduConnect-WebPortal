@model EscolaOnline.Models.Video

<h2>Detalhes do Vídeo</h2>
<div>
    <h4>@Model.Title</h4>
    <p>@Model.Description</p>
    <p><strong>URL:</strong> <a href="@Model.URL">@Model.URL</a></p>
    <p><strong>Date Added:</strong> @Model.DateAdded.ToString("yyyy-MM-dd")</p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Excluir</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>
